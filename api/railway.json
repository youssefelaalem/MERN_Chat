{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": [
                "..."
            ]
        }
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "startCommand": "npm start",
        "sleepApplication": true,
        "websockets": true,
        "multiRegionConfig": {
            "asia-southeast1-eqsg3a": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}